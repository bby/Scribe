<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', ideas_path  %></li>
      <li><%= link_to 'New', new_idea_path %></li>
      <li class="active"><%= link_to 'Show', idea_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Title:</b>
          <%= @idea.title %>

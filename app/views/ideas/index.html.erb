<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', ideas_path %></li>
      <li><%= link_to 'New', new_idea_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Ideas</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Title</th>
					          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @ideas.each do |idea| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= idea.id %>
          </td>
										<td>
						<%= link_to idea.title, idea_path(idea) %>
					</td>
										<td>
            <%= idea.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', idea_path(idea) %> |
            <%= link_to 'edit', edit_idea_path(idea) %> |
            <%= link_to 'destroy', idea_path(idea), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @idea  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
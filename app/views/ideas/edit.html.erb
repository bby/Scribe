<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', ideas_path  %></li>
      <li><%= link_to 'New', new_idea_path %></li>
      <li class="active"><%= link_to 'Edit', edit_idea_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Idea</h2>
    <div class="inner">
      <% form_for @idea, :url => idea_path(@idea), :html => { :class => :form } do |f| -%>
		<%= f.error_messages %>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>